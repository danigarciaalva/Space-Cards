<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.uvdroids.spacecards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mx.uvdroids.spacecards.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="mx.uvdroids.spacecards.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mx.uvdroids.spacecards.WalkthroughActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.ChooseCategory"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.Leaderboard"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.Achievements"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.PlayActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.Download"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.Settings"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.Instructions"
            android:screenOrientation="portrait">
            <intent-filter>
           		<action android:name=".Instructions" />
           		<category android:name="android.intent.category.DEFAULT" />
       		</intent-filter>
        </activity>
        <activity android:name="mx.uvdroids.spacecards.About" android:screenOrientation="portrait">
            <intent-filter>
           		<action android:name=".About" />
           		<category android:name="android.intent.category.DEFAULT" />
       		</intent-filter>
        </activity>
        <activity android:name="mx.uvdroids.spacecards.Score"
            android:screenOrientation="portrait"></activity>
        <activity android:name="mx.uvdroids.spacecards.UnlockedAchievements"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
