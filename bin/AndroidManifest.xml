    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mx.uvdroids.spacecards.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="mx.uvdroids.spacecards.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mx.uvdroids.spacecards.WalkthroughActivity"></activity>
        <activity android:name="mx.uvdroids.spacecards.ChooseCategory"></activity>
        <activity android:name="mx.uvdroids.spacecards.Leaderboard"></activity>
        <activity android:name="mx.uvdroids.spacecards.Achievements"></activity>
    </application>

</manifest>
