<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"/>
     <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicatorQuestions"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        app:selectedColor="#FFCC0000"
        app:fadeDelay="1000"
        app:fadeLength="1000"
        />
     <mx.uvdroids.spacecards.adapters.CustomViewPager
        android:id="@+id/viewPagerQuestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indicatorQuestions">
    </mx.uvdroids.spacecards.adapters.CustomViewPager>
    <LinearLayout
        android:id="@+id/screen_pause"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:visibility="gone"
	    android:background="#ac202020"
	    android:orientation="vertical" >
		<Button 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="40dp"
		    android:layout_marginRight="40dp"
		    android:id="@+id/resume"
		    android:text="@string/resume"/>
		<Button 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="40dp"
		    android:layout_marginTop="20dp"
		    android:layout_marginRight="40dp"
		    android:id="@+id/settings_pause"
		    android:text="@string/settings"/>
		<Button 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="40dp"
		    android:layout_marginRight="40dp"
		    android:layout_marginTop="20dp"
		    android:id="@+id/exit_game"
		    android:text="@string/back"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#ac202020"
	    android:gravity="center"
	    android:id="@+id/screen_correct"
	    android:visibility="gone"
	    android:orientation="vertical">
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="32sp"
	        android:textColor="#99FF33"
	        android:id="@+id/score_text"
	        android:textStyle="bold"
	        android:layout_margin="20dp"
	        android:text="@string/correct"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24sp"
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:text="@string/score_text"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="28sp"
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:id="@+id/score_counter"
	        android:text="@string/score_text"
	        android:layout_margin="20dp"/>
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:id="@+id/next"
	        android:layout_marginRight="40dp"
	        android:text="@string/next"
	        />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#ac202020"
	    android:gravity="center"
	    android:id="@+id/screen_wrong"
	    android:visibility="gone"
	    android:orientation="vertical">
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="32sp"
	        android:textColor="#FF0000"
	        android:textStyle="bold"
	        android:layout_margin="20dp"
	        android:text="@string/wrong"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="24sp"
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:text="@string/score_text"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="28sp"
	        android:textColor="#FFFFFF"
	        android:textStyle="bold"
	        android:id="@id/score_counter"
	        android:layout_margin="20dp"/>
	    <Button 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:id="@id/next"
	        android:layout_marginRight="40dp"
	        android:text="@string/next"
	        />
	</LinearLayout>
</RelativeLayout>